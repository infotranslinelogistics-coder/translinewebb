+import { useEffect } from 'react';
+import { PortalGuard } from './components/PortalGuard';
+import { PortalLayout } from './components/PortalLayout';
+import { PortalAdminActionsScreen } from './pages/PortalAdminActionsScreen';
+import { PortalDashboardScreen } from './pages/PortalDashboardScreen';
+import { PortalEventsScreen } from './pages/PortalEventsScreen';
+import { PortalLoginScreen } from './pages/PortalLoginScreen';
+import { PortalShiftDetailScreen } from './pages/PortalShiftDetailScreen';
+import { PortalShiftsScreen } from './pages/PortalShiftsScreen';
+import { PortalVehiclesScreen } from './pages/PortalVehiclesScreen';
+
+interface PortalRouterProps {
+  pathname: string;
+  onNavigate: (nextPath: string) => void;
+}
+
+const normalizePortalPath = (path: string) => {
+  const trimmed = path.length > 1 ? path.replace(/\/+$/, '') : path;
+  return trimmed === '' ? '/' : trimmed;
+};
+
+export function PortalRouter({ pathname, onNavigate }: PortalRouterProps) {
+  const normalizedPath = normalizePortalPath(pathname);
+
+  useEffect(() => {
+    if (!normalizedPath.startsWith('/portal')) {
+      return;
+    }
+
+    const allowedPaths = [
+      '/portal',
+      '/portal/login',
+      '/portal/shifts',
+      '/portal/vehicles',
+      '/portal/events',
+      '/portal/admin',
+    ];
+
+    const isShiftDetail = /^\/portal\/shifts\/[^/]+$/.test(normalizedPath);
+
+    if (!allowedPaths.includes(normalizedPath) && !isShiftDetail) {
+      window.history.replaceState({}, '', '/portal');
+      onNavigate('/portal');
+    }
+  }, [normalizedPath, onNavigate]);
+
+  let content = <PortalDashboardScreen />;
+
+  if (normalizedPath === '/portal/login') {
+    content = <PortalLoginScreen />;
+  } else if (normalizedPath === '/portal/shifts') {
+    content = <PortalShiftsScreen />;
+  } else if (normalizedPath.startsWith('/portal/shifts/')) {
+    const shiftId = normalizedPath.replace('/portal/shifts/', '');
+    content = <PortalShiftDetailScreen shiftId={shiftId} />;
+  } else if (normalizedPath === '/portal/vehicles') {
+    content = <PortalVehiclesScreen />;
+  } else if (normalizedPath === '/portal/events') {
+    content = <PortalEventsScreen />;
+  } else if (normalizedPath === '/portal/admin') {
+    content = <PortalAdminActionsScreen />;
+  }
+
+  return (
+    <PortalGuard>
+      <PortalLayout>{content}</PortalLayout>
+    </PortalGuard>
+  );
+}
